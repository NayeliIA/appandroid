<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegistroActivity">

    <Button
        android:id="@+id/btnRecuperar"
        android:layout_width="226dp"
        android:layout_height="48dp"
        android:backgroundTint="#0F3341"
        android:text="LISTO"
        android:textColor="#F8F7F7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="84dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/fondo1" />
    <ImageView
        android:id="@+id/atras8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:tint="#0F3341"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backimage" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#E3E3E3"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:text="  Nombre"
        android:textColor="#070707"
        android:textColorHint="#070707"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349" />

    <EditText
        android:id="@+id/correoR"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#E3E3E3"
        android:ems="10"
        android:hint="  Correo"
        android:inputType="textEmailAddress"
        android:textColor="#070707"
        android:textColorHint="#070707"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457" />

    <EditText
        android:id="@+id/contraseñaR"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:background="#E3E3E3"
        android:ems="10"
        android:hint="  Contraseña"
        android:inputType="textPassword"
        android:textColor="#070707"
        android:textColorHint="#070707"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <EditText
        android:id="@+id/confirmarcontraseña"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:background="#E3E3E3"
        android:ems="10"
        android:hint="  Confirmar contraseña"
        android:inputType="textPassword"
        android:shadowColor="#020202"
        android:textColor="#070707"
        android:textColorHint="#070707"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="377dp"
        android:layout_height="48dp"
        android:background="#E3E3E3"
        android:ems="10"
        android:inputType="text"
        android:text="  Teléfono"
        android:textColor="#070707"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="156dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:text="Registrate"
        android:textColor="#0F3341"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

</androidx.constraintlayout.widget.ConstraintLayout>